---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description_1: string
  description_2: string
  link?: string
  date: string
  location: string
  technologies: string[]
  tools: string[]
}

const { title, company, description_1, description_2, link, date, location, technologies, tools } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:top-[20px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-blue-500 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-blue-500">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      <h5 class="text-sm text-gray-600 dark:text-white">{location}</h5>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
      <h5 class="text-sm text-gray-600 dark:text-white mt-2">Tecnologias:</h5>
      <div class="flex flex-wrap max-w-64 gap-x-2 gap-y-0.5">
        {technologies.map((tech) => (
          <span class="text-xs italic text-blue-500 dark:blue-400">{tech}</span>
        ))}
      </div>
      <h5 class="text-sm text-gray-600 dark:text-white mt-2">Herramientas:</h5>
      <div class="flex flex-wrap max-w-64 gap-x-2 gap-y-0.5">
        {tools.map((tech) => (
          <span class="text-xs italic text-blue-500 dark:blue-400">{tech}</span>
        ))}
      </div>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    {description_1}
  <div class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    {description_2}
  </div>
    {
      link && (
        <LinkInline href={link}>
          Saber m√°s{" "}
          <svg
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>
